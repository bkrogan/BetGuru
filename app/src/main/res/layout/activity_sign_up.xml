<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="com.aakoorathh.betguru.SignUp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/signup"
        tools:ignore="ContentDescription"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="SignUp"
                android:textColor="@color/colorPrimary"
                android:textSize="35sp"
                tools:ignore="UnusedAttribute"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@android:color/background_light"
                app:cardCornerRadius="30dp"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/edt_SignUp_Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Username"
                    android:inputType="text"
                    android:maxLength="15"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@android:color/background_light"
                app:cardCornerRadius="30dp"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/edt_SignUp_FirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="First name"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@android:color/background_light"
                app:cardCornerRadius="30dp"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/edt_Signup_LastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Last name"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@android:color/background_light"
                app:cardCornerRadius="30dp"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/edt_SignUp_Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="60"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:backgroundTint="@android:color/background_light"
                app:cardCornerRadius="30dp"
                tools:ignore="UnusedAttribute">

                <EditText
                    android:id="@+id/edt_SignUp_Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:textColor="@android:color/secondary_text_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="20sp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="30dp"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:id="@+id/tv_SignUp_SignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="SignUp"
                    android:textColorHint="@android:color/white"
                    android:textSize="25sp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="5dp"
                android:text="\u2190 Back"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
